{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*"
  ]
}
